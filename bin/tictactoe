#!/usr/bin/env ruby

require_relative '../config/environment'


def start
    puts "What kind of game would you like to play: 0, 1, or 2 players?"
    input = gets.strip
    if input == "0"
      game = Game.new(Players::Computer.new("X"), Players::Computer.new("O"), Board.new)
      game.play
      sleep(1)
      play_again?
    elsif input == "1"
      start_1_player
    elsif input == "2"
      game = Game.new
      game.play
      sleep(1)
      play_again?
    elsif input == "wargames"
      puts "Executing wargames"
      sleep(0.5)
      Game.wargames
      puts "Game 100"
      sleep(0.1)
      game = Game.new(Players::Computer.new("X"), Players::Computer.new("O"), Board.new)
      game.play
      sleep(1)
      play_again?
    else
      puts "I didn't understand that."
      start
    end
  end

  def start_1_player
    puts "Who should go first and be 'X'? (Human/Computer)"
    input = gets.strip.upcase
    if input == "HUMAN"
      game = Game.new(Players::Human.new("X"), Players::Computer.new("O"), Board.new)
      game.play
      sleep(1)
      play_again?
    elsif input == "COMPUTER"
      game = Game.new(Players::Computer.new("X"), Players::Human.new("O"), Board.new)
      game.play
      sleep(1)
      play_again?
    else
      puts "I didn't understand that."
      start_1_player
    end
  end

  def play_again?
    puts "Would you like to play again? (Y/N)"
    input = gets.strip.upcase
    if input == "Y"
      start
    elsif input == "N"
      puts "Thanks for playing!"
    else
      puts "I didn't understand that."
      play_again?
    end
  end

puts "Hello, Welcome to Tic Tac Toe!"
sleep(1)
start
